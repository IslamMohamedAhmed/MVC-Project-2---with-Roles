@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";
}



<form asp-action="Delete">
    <h6>Will you delete Employee @Model.Name?</h6>
    <partial name="PartialViews/DetailsDeletePartialView"></partial>
    <input asp-for="Age" hidden />
    <input asp-for="Name" hidden />
    <input asp-for="Salary" hidden />
    <input asp-for="Address" hidden />
    <input asp-for="Email" hidden />
    <input asp-for="PhoneNumber" hidden />
    <select asp-for="IsActive" hidden class="form-select">
        <option value=true selected>True</option>
        <option value=false>False</option>
    </select>


    <input type="submit" value="Yes"   class="btn btnStyl btn-outline-danger">
    <a asp-action="Index" class="btn btnStyl btn-outline-dark">No</a>

</form>

